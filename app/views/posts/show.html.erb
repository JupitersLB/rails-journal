<div class="container pt-5">
  <div class="my-container">
    <div class="post-card">
      <div class="post-card-header d-flex align-items-start">
        <h1 class ="col-10"><%= @post.title %></h1>
        <div class="col-2">
          <div class="row text-right">
            <%= link_to user_path(@post.user.username), class: 'col' do %>
              <p><small>By <%= @post.user.username %></small></p>
            <% end %>
          </div>
          <div class="row text-right">
            <p class="col"><small><%= @post.date.to_formatted_s(:long) %></small></p>
          </div>
        </div>
      </div>
      <div class="post-card-content py-3 pl-3">
        <p><%= @post.content %></p>
      </div>
      <div class="post-card-comments pl-3">
        <% @post.comments.each do |comment| %>
          <div class="row pl-5">
            <% if policy(comment).friends? %>
              <%= link_to user_path(comment.user.username), class: 'col-1' do %>
                <p><i><small> <%= comment.user.username %></small></i></p>
              <% end %>
            <% else %>
                <p class="col-1"><i><small>annonymous</small></i></p>
            <% end %>
            <p class="col-3"><i><small><%= comment.created_at.to_formatted_s(:long) %></small></i></p>
            <% if policy(comment).destroy? %>
              <%= link_to post_comment_path(@post, comment),
                          method: :delete,
                          data: { confirm: "Are you sure?" } do %>
                          <i class="fa fa-trash" aria-hidden="true"></i>
              <% end %>
            <% end %>
          </div>
          <p class="pl-5"><%= comment.note %></p>
          <hr>
        <% end %>
      </div>
      <a class="btn btn-outline-secondary ml-3 my-3" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        Add a comment
      </a>
      <div class="collapse px-3 py-3" id="collapseExample">
        <div class="card card-body">
          <%= render 'comment_form' %>
        </div>
      </div>
    </div>
  </div>
</div>
