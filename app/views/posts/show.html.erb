<div class="container pt-5">
  <div class="my-container">
    <div class="post-card">
      <div class="post-card-header d-flex align-items-start">
        <h1 class ="col-10"><%= @post.title %></h1>
        <div class="col-2">
          <div class="row text-right">
            <%= link_to user_path(@post.user.username), class: 'col' do %>
              <p><small>By <%= @post.user.username %></small></p>
            <% end %>
          </div>
          <div class="row text-right">
            <p class="col"><small><%= @post.date.to_formatted_s(:long) %></small></p>
          </div>
        </div>
      </div>
      <div class="post-card-content py-3 pl-3">
        <p><%= @post.content %></p>
      </div>
      <div class="post-card-comments pl-3">
        <% @post.comments.each do |comment| %>
          <%= render 'comments/comment', comment: comment, post: @post %>
        <% end %>
      </div>
      <a class="btn btn-outline-secondary ml-3 my-3" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        Add a comment
      </a>
      <div class="collapse px-3 py-3" id="collapseExample">
        <div class="card card-body">
          <%= render 'comment_form' %>
        </div>
      </div>
    </div>
  </div>
</div>
