<% if notification.read_at? %>
  <%= link_to relationships_path, class: "dropdown-item read" do %>
    <%= notification.actor.username %>
    <%= notification.action %>
    a <%= notification.notifiable_type.underscore.humanize.downcase %>
  <% end %>
<% else %>
  <%= link_to relationships_path, class: "dropdown-item unread" do %>
    <%= notification.actor.username %>
    <%= notification.action %>
    a <%= notification.notifiable_type.underscore.humanize.downcase %>
  <% end %>
<% end %>
