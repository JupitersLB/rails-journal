<div class="container pt-5">
  <div class="main-container">
    <div class="row pb-3 align-items-center">
      <div class="col-8">
        <h1>Do you know them?</h1>
      </div>
      <div class="col-4 align-middle text-right">
        <%= form_tag(search_path, method: "get", class: "form-inline") do %>
          <div class="form-group">
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Find friends" %>
            <%= submit_tag "Search", class: "ml-3 btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
    <% if @search_results.present? %>
      <%= render 'shared/friends', friends: @search_results, friend_search: true, pending_request: false, received: false %>
    <% end %>
  </div>
</div>
